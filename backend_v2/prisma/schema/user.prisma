enum Role {
  PARENT
  CHILDREN
  COACH
  MANAGER
  SUPER
}

model User {
  id         Int @id @default(autoincrement())
  role       Role
  login      String @unique
  password   String
  email      String? @unique
  phone      String? @unique
  telegram   String? @unique
  firstname  String?
  surname    String?
  middlename String?
  profilePicture String?
  refreshToken String? @unique

  trainingSessions TrainingSession[]

  enrolledSessions    EnrolledUsers[]
  attendedSessions    SessionAttendees[]
}